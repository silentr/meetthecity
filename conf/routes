# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                           controllers.Application.index()
GET     /tours                      controllers.Application.tours()
GET     /signup                     controllers.Application.signup()
POST    /signup                     controllers.Application.signupSubmit()
GET     /signin                     controllers.Application.signin()
POST    /signin                     controllers.Application.authenticate()
GET     /user/all                   controllers.Application.getAllUsers()
GET     /user/:id                   controllers.Application.getUser(id : String)
GET     /view-a-tour/:id            controllers.Application.viewATour(id: Long)
GET     /join-a-tour                controllers.Application.joinATour()
GET     /leave-a-tour               controllers.Application.leaveATour()
GET		/create-a-tour				controllers.Application.createATour()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
